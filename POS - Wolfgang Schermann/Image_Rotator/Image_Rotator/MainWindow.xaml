<Window x:Class="Image_Rotator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Image_Rotator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Select Folder..." HorizontalAlignment="Left" Margin="25,26,0,0" VerticalAlignment="Top" Width="100" Click="Select_Folder_Click"/>
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="25,60,0,0" VerticalAlignment="Top" Width="225" Maximum="100" Minimum="30" Value="50"/>
        <Button Content="Select Destination..." HorizontalAlignment="Left" Margin="130,26,0,0" VerticalAlignment="Top" Width="120" Click="Destination_Folder_Click"/>
        <CheckBox x:Name="VFlip" Content="Vertical_Flip" HorizontalAlignment="Left" Margin="25,85,0,0" VerticalAlignment="Top" Width="100"/>
        <CheckBox x:Name="HFlip" Content="Horizontal_Flip" HorizontalAlignment="Left" Margin="25,105,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Start" HorizontalAlignment="Left" Margin="175,196,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
    </Grid>
</Window>
