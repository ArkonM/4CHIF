<Window x:Class="WPFAlarmClock.DateTimeDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:wfi="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"                
    Title="DateTimeDlg" Height="204" Width="390" ResizeMode="NoResize">
    
        <UniformGrid Rows="3" Columns="2" Margin="10">
            <TextBox x:Name="minBox"/>
            <Label Content="Minuten" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="sekBox"/>
            <Label Content="Sekunden" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Click="Button_Click">Cancel</Button>
            <Button Click="buttonOkay_Click">OK</Button>
        </UniformGrid>
    
</Window>