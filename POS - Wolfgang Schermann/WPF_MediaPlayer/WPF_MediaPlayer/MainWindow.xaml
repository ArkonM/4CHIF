<Window x:Class="WPF_MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MediaPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel x:Name="Window" LastChildFill="True">

            <DockPanel DockPanel.Dock="Bottom" Height="50">
                <Button x:Name="previous" Content="Vorheriges" Height="50" VerticalAlignment="Top" Width="75" Margin="0,0,0,-0.4" Click="previous_Click"/>
                <Button x:Name="pause" Content="Pause" Height="49.6" VerticalAlignment="Bottom" Width="75"/>
                <Button x:Name="next" Content="Nächstes" Height="49.6" VerticalAlignment="Bottom" Width="75"/>


            </DockPanel>

            <MediaElement x:Name="mediaElement"/>
        </DockPanel>
    </Grid>
</Window>
